<%- include ../_header %>
<h1><a href="/phases">Phase</a> &DoubleRightArrow; <%=step.step%></h1>

<div class="row">
  <div class="col-sm-12">
    <div class="card card-block">
      <h3 class="card-title">Introduction</h3>
      <p class="card-text"><%=step.introduction%></p>
      <%
        var lst = step.introbis;
        var txt ="";
        for (var i=0; i<lst.length; i++)
            txt+="<p>"+lst[i];
      %>
      <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target=".detail">Details</button>
      <div class="modal fade detail" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel"><%=step.step%> details</h4>
                </div>
                <div class="modal-body">
                    <%- txt %>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
    <% for(var i=0; i<processes.length; i++) {%>
    <div class="col-sm-12">
        <div class="card card-block">
            <h4 class="card-title"><%=processes[i].title%></h4>
            <p class="card-text"><%=processes[i].introduction%></p>
            <a class="btn btn-default" href="processus/<%=processes[i].id%>" role="button">Detail</a>
        </div>
    </div>
    <% } %>
</div>


<%- include ../_footer %>